<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SQliteStore">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_btn1"
        android:text="点击创建数据库"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_btn2"
        android:layout_below="@+id/sqlite_btn1"
        android:text="点击插入数据"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_btn3"
        android:layout_below="@+id/sqlite_btn2"
        android:text="点击更新数据"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_btn4"
        android:layout_below="@+id/sqlite_btn3"
        android:text="点击删除数据"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sqlite_btn5"
        android:layout_below="@+id/sqlite_btn4"
        android:text="点击查询数据"/>



</RelativeLayout>
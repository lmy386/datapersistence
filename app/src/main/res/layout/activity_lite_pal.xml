<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LitePalActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lpbtn1"
        android:text="点击创建数据库"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lpbtn12"
        android:layout_below="@+id/lpbtn1"
        android:text="点击插入数据"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lpbtn13"
        android:layout_below="@+id/lpbtn12"
        android:text="点击更新数据"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lpbtn14"
        android:layout_below="@+id/lpbtn13"
        android:text="点击删除数据"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lpbtn15"
        android:layout_below="@+id/lpbtn14"
        android:text="点击查询数据"/>



</RelativeLayout>